@model Recipe

<h2>Редактиране на рецепта</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Скрито поле за Id на рецептата -->

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" value="@Model.Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrepTimeInMinutes"></label>
        <input asp-for="PrepTimeInMinutes" class="form-control" value="@Model.PrepTimeInMinutes" />
        <span asp-validation-for="PrepTimeInMinutes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Запази промените</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>
